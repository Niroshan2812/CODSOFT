<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" fx:controller="Task_5.src.com.controller.SearchStrudentController">
    <VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1">
        <Label text="Search Student details"/>
        <Button text = "Back" onAction="#backtoDashboard"/>

        <HBox spacing="5">
            <TextField fx:id="searchField" promptText="Enter Roll Number"/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>

        <TextArea fx:id="showDetails" editable="false" prefRowCount="6"/>

        <Label fx:id = "messageLabel"/>
    </VBox>
</StackPane>